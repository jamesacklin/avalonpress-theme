<header role="banner">
  <ul class="nav" role="navigation">
    <li class="home"><a href="{{site.url}}"><i class="fa fa-2x fa-refresh"></i></a></li>
    {% set current_id = page.id %}
    {% for page in pages %}
      {% if current_id == page.id %}
        <li class="active"><a href="{{page.permalink}}">{{page.title}}</a></li>
      {% else %}
        <li><a href="{{page.permalink}}">{{page.title}}</a></li>
      {% endif %}
    {% endfor %}
  </ul>
  <a href="#" class="btn btn-menu"><i class="fa fa-bars"></i> Menu</a>
</header>